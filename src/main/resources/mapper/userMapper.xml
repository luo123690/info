    <insert id="addUser"  useGeneratedKeys="true" keyProperty="id" >
        insert into user(username,password,name,tel,indentify,address,sex,age,college,profession,department,graduate,intro) values (#{username},#{password},#{name},#{tel},#{indentify},#{address},#{sex},#{age},#{college},#{profession},#{department},#{graduate},#{intro})
    </insert>

    <insert id="addUserInfo"  useGeneratedKeys="true" keyProperty="id" >
        insert into info(userid,profession,education,honor,skill,technology,patent,paper,professor,point) values (#{userid},#{profession},#{education},#{honor},#{skill},#{technology},#{patent},#{paper},#{professor},#{point})
    </insert>

    <insert id="addToken"  useGeneratedKeys="true" keyProperty="id" >
        insert into login(userid,token) values (#{userid},#{token})
    </insert>

    <update id="updateToken" parameterType="com.six.info.entity.Login" >
        update login
        <set>
            <if test="userid != null" >
                token = #{token},
            </if>
        </set>
        where userid=#{userid}
    </update>
    <update id="update" parameterType="com.six.info.entity.User" >
        update user
        <set>
            <if test="tel !=null">
                tel = #{tel},
            </if>
            <if test="identify != null" >
                identify = #{identify},
            </if>
            <if test="address != null" >
                address = #{address},
            </if>
            <if test="password != null" >
                password = #{password},
            </if>

            <if test="sex!= null" >
                sex = #{sex},
            </if>

            <if test="name !=null">
                name = #{name},
            </if>

        </set>
        where id=#{id}
    </update>

