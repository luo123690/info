    <select id="findOne" resultType="com.six.info.entity.User">
        select * from user
        <where>
            <!-- 重复说一下，id 不能是 int，int 默认是 0，不可能是 null, 而 Integer 可以是 null-->
            <if test="id!=null">
                id=#{id}
            </if>
            or
            <if test="username!=null">
                username=#{username}
            </if>
        </where>
    </select>

